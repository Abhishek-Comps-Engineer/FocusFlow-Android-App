<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context=".ui.DashBoardActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/dashboard_toolbar"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="@dimen/_56sdp"
            android:paddingTop="@dimen/_10sdp"
            app:titleMarginStart="@dimen/_10sdp"
            android:background="@color/white"
            app:title="@string/app_name"
            app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge"
            app:titleTextColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:menu="@menu/dashboard_menu"/>

        <!-- Scrollable Content -->
        <ScrollView
            android:id="@+id/scroll_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/dashboard_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your FocusFlow tools"
                    android:padding="@dimen/_8sdp"
                    android:textStyle="italic"
                    android:textSize="@dimen/_12sdp"/>
                <!-- Pie Chart with Total Screen Time -->
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pie_chart"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_240sdp"
                    android:layout_marginTop="@dimen/_8sdp"/>

                <!-- Unlocks & Notifications -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_12sdp">

                    <TextView
                        android:id="@+id/tv_unlocks"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="11 Unlocks"
                        android:padding="@dimen/_10sdp"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tv_notifications"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:padding="@dimen/_10sdp"
                        android:text="50 Notifications"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:alpha="0.6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ways to Disconnect"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:alpha="0.8"
                    android:layout_margin="@dimen/_8sdp"
                    android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="3">



                            <LinearLayout
                                android:id="@+id/dashboard_detail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:background="@color/white"
                                android:padding="@dimen/_8sdp">

                                <TextView
                                    android:id="@+id/tv_dashboard_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dashboard"
                                    android:textSize="@dimen/_16ssp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:id="@+id/tv_dashboard_desc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="See detailed app usage and trends"
                                    android:textSize="@dimen/_14ssp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="@dimen/_4sdp"/>
                            </LinearLayout>

                        <!-- Bedtime Mode Card -->


                            <LinearLayout
                                android:id="@+id/bedtime_detail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:padding="@dimen/_8sdp">

                                <TextView
                                    android:id="@+id/tv_bedtime_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bedtime mode"
                                    android:textSize="@dimen/_16ssp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:id="@+id/tv_bedtime_desc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Limit phone usage before sleep"
                                    android:textSize="@dimen/_14ssp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="@dimen/_4sdp"/>
                            </LinearLayout>



                            <LinearLayout
                                android:id="@+id/focusMode_detail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:padding="@dimen/_8sdp">
                                <TextView
                                    android:id="@+id/tv_focus_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Focus mode"
                                    android:textSize="@dimen/_16ssp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:id="@+id/tv_focus_desc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pause distracting apps"
                                    android:textSize="@dimen/_14ssp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="@dimen/_4sdp"/>
                            </LinearLayout>

                    </LinearLayout>


                <!-- (Optional) Extra Dashboard Stats -->
                <LinearLayout
                    android:id="@+id/section_more_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_24sdp">


                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
